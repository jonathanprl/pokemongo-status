extends ../index/index.jade

block content
  h1 Pokemon Go Server Status
  .container
    .row
      .col-md-4.col-md-offset-4
        ul.services.list-group
            h4.list-group-item Login Servers
            each status, index in locals.status.globalStatuses
              li.list-group-item.sub
                | #{status.friendly}
                span.pull-right(class=status.statusCode)
                  | #{status.text}
            h4.list-group-item Game Servers (Regions)
            each status, index in locals.status.regionStatuses
              li.list-group-item.sub
                | #{status.friendly}
                span.pull-right(class=status.statusCode)
                  | #{status.text}
            h4.list-group-item Statistics (All)
            li.list-group-item.sub
              | Total Servers
              span.pull-right
                | #{locals.status.stats.totalCount}
            li.list-group-item.sub
              | Servers Online
              span.pull-right
                | #{locals.status.stats.onlineCount}
            li.list-group-item.sub
              | Servers Offline
              span.pull-right
                | #{locals.status.stats.offlineCount}
            li.list-group-item.sub
              span.normal-load Normal Load
              span.pull-right
                | #{locals.status.stats.normalLoadCount}
            li.list-group-item.sub
              span.medium-load Medium Load
              span.pull-right
                | #{locals.status.stats.mediumLoadCount}
            li.list-group-item.sub
              span.high-load High Load
              span.pull-right
                | #{locals.status.stats.highLoadCount}
            li.list-group-item.sub
              span.max-load Max Load
              span.pull-right
                | #{locals.status.stats.maxLoadCount}
        //- div.updated
        //-   | Last updated at #{locals.status.lastUpdated} GMT (#{locals.status.lastUpdatedHuman})

  footer
    | This website is a work in-progress. <br>
    | Real-time updating, historical uptime graphs, more service statuses and other features to come very shortly!
